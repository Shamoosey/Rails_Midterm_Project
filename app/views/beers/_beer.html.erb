<div class="column is-one-third">
<div class="card">
  <div class="card-content">
    <p class="title">
      <% if show_link%>
        <%= link_to beer.name, beer %>
      <% else %>
        <%= beer.name %>
      <% end %>
    </p>
    <p class="subtitle">
      Type: <%= beer.category %>
    </p>
  </div>
  <footer class="card-footer">
    <p class="card-footer-item">
      <span>
        ABV: <%= beer.abv %>
      </span>
    </p>
    <% if beer.ibu? %>
    <p class="card-footer-item">
      <span>
        IBU: <%= beer.ibu %>
      </span>
    </p>
    <% end %>
    <p class="card-footer-item">
      <span>
        Brewer: <%= link_to beer.brewery.name, beer.brewery %></a>
      </span>
    </p>
  </footer>
</div>
</div>